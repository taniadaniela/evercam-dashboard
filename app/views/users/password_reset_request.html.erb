<% provide(:title, "Evercam: Password Reset") %>
<div id="evercam-video-section" class="evercam-video-section">
  <video autoplay loop muted poster="/assets/poster.jpg" id="loop-video">
    <source src="https://evercam.io/gpoview.webm" type="video/webm">
    <source src="https://evercam.io/gpoview.mp4" type="video/mp4">
    <source src="https://evercam.io/gpoview.ogv" type="video/ogg">
  </video>
</div>
<div class="container section-position" id="pass-reset">
  <div class="bb-alert alert alert-info" style="display:none;">
    <span></span>
  </div>
  <div class="row">
    <div class="center-div width-400 col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 panel">
      <div class="col-md-12 text-center">
        <div class="branding padding-topbottom30">
          <%= link_to image_tag("evercam_logo.png", class: "svg-logo", alt: "Evercam.io"), root_path %>
        </div>
      </div>
      <div class="col-md-12 col-xs-12 reset-password padding-left-0">
        <form role="form" method="post" class="center-block">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>

          <div class="form-group">
            <div class="input-icon right">
              <i class="icon">@</i>
              <input type="email" value="" class="form-control reset-password-email" id="email" name="email" placeholder="Enter your email address">
            </div>
          </div>
          <input type="submit" class="btn btn-primary width-full" value="Reset">
        </form>
      </div>
      <div class="clear-f"></div>
      <div class="col-md-12 text-center margin-top-20">
        <p><%= link_to "I've remembered my password", signin_path %></p>
    </div>
    </div>
  </div>
</div>

<script>
  Notification.init(".bb-alert");
  <% if flash[:message] %>
  Notification.show('<%= flash[:message] %>');
  <% end %>
</script>

<script>
  $(document).ready(function () {
    window.initializeVideoBackground();
  });
</script>
