<% provide(:title, "Sign in") %>
<script type="text/javascript">
  mixpanel.track_forms("#sign-in", "Sign In");
</script>
<section id="sign-in-section" class="site-min-height">
  <div class="container section">
    <div id="signin" class="col-md-12 text-center">
      <div class="bb-alert alert alert-danger" style="display:none;">
        <span></span>
      </div>
      <div class="branding margin-bottom-50">
        <%= link_to root_path, class: 'sign-in-logo' do %>
          <%= image_tag("evercam_logo.svg", :class => "svg-logo", alt: "Evercam.io") %>
        <% end %>
      </div>
    </div>

    <div id="sign-in" class="col-md-4 col-md-offset-4">
      <h3 class="text-center">Sign in</h3>

      <%= form_for(:session, url: sessions_path, :html => { :id => "sign-in" }) do |f| %>

        <div class="grey col-md-8 col-md-offset-2 text-center">
          <%= f.label :email %> or <%= f.label :username %>
          <div class="input-icon right">
            <i class="icon-user"></i>
            <%= f.text_field :login, value: params.fetch(session, {})[:login] %>
          </div>
        </div>

        <div class="col-md-8 col-md-offset-2 text-center">
          <%= f.label :password %>
          <div class="input-icon right">
            <i class="icon-key"></i>
            <%= f.password_field :password %>
          </div>
        </div>

        <div class="col-md-8 col-md-offset-2">
          <div class="sign-in">
            <%= f.submit "Sign in", class: "btn btn-large btn-primary col-lg-6 col-lg-offset-3" %>
          </div>
        </div>

        <div class="col-md-8 col-md-offset-2 text-center">
          <div class="grey margin-top-20">
            I've <%= link_to "forgotten my password", password_reset_path %>
          </div>
        </div>
        <input type="hidden" id="session_anchor" name="session[anchor]">
      <% end %>
    </div>

    <div class="grey col-md-4 col-md-offset-4 row text-center margin-top-20">
      <p>Or <%= link_to "Create New Account", signup_path %></p>
    </div>
  </div>
</section>

<script>
  document.getElementById("session_anchor").value = window.location.hash;
  Notification.init(".bb-alert");
  <% if flash[:error] %>
  Notification.show('<%= flash[:error] %>');
  <% end %>
</script>
