<title>Evercam - Sign in</title>
<% provide(:title, "Sign in") %>
<section id="sign-in-section" class="site-min-height">
  <div class="container section">
    <div id="signin" class="col-md-12 text-center">
      <div class="bb-alert alert alert-danger" style="display:none;">
        <span></span>
      </div>
    </div>


    <div id="sign-in" class="col-md-4 col-md-offset-4" style="padding: 5px 0;">
      <img width="24px" style="float: left;" src="data:image/png;base64,">


      <%= form_for(:session, url: sessions_path) do |f| %>

         <div class="col-md-8 col-md-offset-2 text-center">
          <%= f.label :email %> / <%= f.label :username %>
            <div class="input-icon right">
              <i class="icon-user"></i>
          <%= f.text_field :email, value: params.fetch(session, {})[:email] %>
            </div>
        </div>

        <div class="col-md-8 col-md-offset-2 text-center">
          <%= f.label :password %>
          <div class="input-icon right">
            <i class="icon-key"></i>
          <%= f.password_field :password %>
            </div>
        </div>

        <div class="col-md-8 col-md-offset-2">
          <div style="margin-top: 10px">
            <%= f.submit "Sign in", class: "btn btn-large btn-primary col-lg-6 col-lg-offset-3" %>
          </div>
        </div>

      <% end %>
    </div>

  </div>
</section>

<script>
  Notification.init(".bb-alert");
  <% if flash[:error] %>
  Notification.show('<%= flash[:error] %>');
  <% end %>
</script>